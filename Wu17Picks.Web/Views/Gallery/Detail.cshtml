@model GalleryDetailModel


    <div class="container body-content">
        <div class="row image-detail-container">
            <div class="image-detail">
                <img src="@ViewData["FilePath"]@Model.FileName" style="width: 50%; height: 50%;" alt="@Model.Title" />
            </div>
        </div>
        <div class="row image-detail-meta">
            <span><strong>Title:</strong> @Model.Title</span><br />
            <span><strong>Uploaded:</strong> @Model.CreatedOn</span>

        </div>
        <div class="row">
            <a class="btn btn-primary" asp-controller="Gallery" asp-action="Index">
                Back to Gallery
            </a>
            <div style="float:right;">
                <a class="btn btn-primary" href="@ViewData["FilePath"]@Model.FileName">
                    Download
                </a>
                <a class="btn btn-success" asp-controller="Cart" asp-action="AddImage" asp-route-id="@Model.Id">
                    Add to basket
                </a>
            </div>
        </div>
    </div>